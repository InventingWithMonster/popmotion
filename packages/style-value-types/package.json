{
  "name": "style-value-types",
  "version": "3.0.6",
  "description": "Parsers, transformers and tests for special value types, eg: %, hex codes etc.",
  "main": "./dist/style-value-types.cjs.js",
  "module": "./dist/style-value-types.esm.js",
  "jsnext:main": "./dist/style-value-types.esm.js",
  "unpkg": "./dist/style-value-types.min.js",
  "types": "src/index.ts",
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "build": "rollup -c",
    "watch": "rollup -c -w",
    "lint": "tslint -c tslint.json 'src/**/*.{ts}'",
    "test": "jest",
    "measure": "gzip -c $npm_package_unpkg | wc -c",
    "prepublishOnly": "npm run lint && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Popmotion/popmotion/tree/master/packages/style-value-types"
  },
  "keywords": [
    "css",
    "svg",
    "hex",
    "rgba",
    "hsla"
  ],
  "author": "Matt Perry",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Popmotion/popmotion/issues"
  },
  "homepage": "https://popmotion.io",
  "devDependencies": {
    "@types/jest": "^23.1.1",
    "jest": "^23.1.0",
    "jest-cli": "^23.1.0",
    "rollup": "^0.60.7",
    "rollup-plugin-typescript2": "^0.14.0",
    "rollup-plugin-uglify": "^3.0.0",
    "ts-jest": "^22.4.6"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "\\.(ts)$": "../../../node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "/_tests/.*\\.(ts|tsx|js)$",
    "rootDir": "src",
    "testURL": "http://localhost/"
  },
  "prettier": {
    "parser": "typescript",
    "singleQuote": true
  }
}
